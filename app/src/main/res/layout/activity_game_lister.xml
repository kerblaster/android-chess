<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_lister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs214.group08.chessapp.GameLister">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortByNameButton"
                android:onClick="sortByNameButtonHandler"
                android:layout_weight="1" />

            <Button
                android:text="date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortByDateButton"
                android:onClick="sortByDateButtonHandler"
                android:layout_weight="1" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gameListView" />

    </LinearLayout>

</RelativeLayout>
